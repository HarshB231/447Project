generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Employee {
  id               Int      @id @default(autoincrement())
  firstName        String?
  lastName         String?
  umbcEmail        String?  @unique
  personalEmail    String?
  gender           String?
  countryOfBirth   String?
  citizenships     String?
  department       String?
  title            String?
  departmentAdmin  String?
  advisor          String?
  annualSalary     Decimal? @db.Decimal(18,2)
  educationLevel   String?
  educationField   String?
  flagged          Boolean  @default(false)
  visas            Visa[]
  notes            Note[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Visa {
  id                Int      @id @default(autoincrement())
  type              String?
  subclass          String?
  initialStart      DateTime?
  startDate         DateTime?
  endDate           DateTime?
  prepExtensionDate DateTime?
  maxHPeriod        String?
  i94Expiry         DateTime?
  filedBy           String?
  socCode           String?
  socDescription    String?
  notesPr           String?
  notesGeneral      String?
  employee          Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  employeeId        Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Note {
  id         Int      @id @default(autoincrement())
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  employeeId Int
  content    String
  createdAt  DateTime @default(now())
}
